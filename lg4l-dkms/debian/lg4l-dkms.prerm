#DEBHELPER#

CVERSION=`dpkg-query -W -f='${Version}' lg4l-dkms | awk -F "-" '{print $1}' | cut -d\: -f2`
case "$1" in
    remove|upgrade)
		echo "Removing all DKMS Modules"
		dkms remove -m lg4l -v $CVERSION --all > /dev/null
		echo "Done."
        ;;
esac
